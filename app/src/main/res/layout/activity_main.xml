<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    android:background="@color/whiteBroun">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:srcCompat="@drawable/pngegg"
            android:contentDescription="@string/imageDescription" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/broun"
            android:gravity="center"
            android:text="@string/Welcome" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/hintTextUserName"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorLink="@color/broun"
        android:autofillHints="" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="@string/hintTextPassword"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:autofillHints="" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/buttonOrderText"
        android:backgroundTint="@color/broun"
        android:minHeight="60dp"/>
</LinearLayout>

